extends layout

block content
	.splash.leagues.bg-black
		.container
			.row
				.col-md-4.col-md-offset-1.animation-fade-in-right
					.align-center
						h1 Your League Rank
						br
						if fightCount < 10
							img(src='/img/leagues/0.png', width='180')
							br
							br
							h2 Unranked
						else
							img(src='/img/leagues/#{Mikuia.Leagues.getLeague(rating)}.png', width='180')
							br
							br
							h2 #{Mikuia.Leagues.getLeagueText(rating)} #{Mikuia.Leagues.getLeagueDivisionText(rating)}

				.col-md-6.animation-fade-in-left
					h1 Progress
					br
					if rating < 600
						b Even progress bar doesn't want to talk with you.
						br
					else if rating < 2200
						.progress
							.progress-bar.progress-bar-warning.progress-bar-striped.active(style='width: ' + (((rating % 200) / 200) * 100) + '%;')
					else if rating < 2360
						.progress
							.progress-bar.progress-bar-warning.progress-bar-striped.active(style='width: ' + ((((rating + 40) % 160) / 160) * 100) + '%;')
					h3
						| ELO: #{rating}
						if rating < 2200 && rating >= 600
							.pull-right #{200 - (rating % 200)} to rank up
						br
						br
						| #{fightCount} fights
						.text-success #{fightsWon} won
						.text-danger #{fightsLost} lost
	.container.animation-fade-in-up
		.row
			.col-md-12
				if fightCount < 10
					.alert.alert-warning
						strong Placement Fights
						p You didn't fight 10 times yet. Your rank will appear after you complete 10 fights.
				h3 There should be more stuff here but it's 3 AM.